<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Rate <%=restaurant.Name%></h1>
		<div style="width:30%; margin:25px auto">
			<form action="/restaurants/<%=restaurant.Restaurant_id%>/reviews" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="review[Review]" placeholder="Review">
				</div>

				<div class="form-group">
				<div class="rating">
  				  <label>
      				<input type="radio" name="review[Rating]" value="1" checked/>
      				<span class="icon">★</span>
    				</label>
           			<% for(var i=2; i<=5; i++) { %>
        			<label>
        				<input type="radio" name="review[Rating]" value="<%=i%>" />
               			 <% for(var j=0;j<i;j++) { %>
        				  <span class="icon">★</span>
               			 <% } %>
      				</label>
           			<% } %>
			  	</div>
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
<style>
.rating {
  display: inline-block;
  position: relative;
  height: 25px;
  line-height: 25px;
  font-size: 20px;
}

.rating label {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  cursor: pointer;
}

.rating label:last-child {
  position: static;
}

.rating label:nth-child(1) {
  z-index: 5;
}

.rating label:nth-child(2) {
  z-index: 4;
}

.rating label:nth-child(3) {
  z-index: 3;
}

.rating label:nth-child(4) {
  z-index: 2;
}

.rating label:nth-child(5) {
  z-index: 1;
}

.rating label input {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.rating label .icon {
  float: left;
  color: transparent;
}

.rating label:last-child .icon {
  color: #000;
}

.rating:not(:hover) label input:checked ~ .icon,
.rating:hover label:hover input ~ .icon {
  color: #f4e542;
}

.rating label input:focus:not(:checked) ~ .icon:last-child {
  color: #000;
  text-shadow: 0 0 5px #09f;
}	
</style>

<script>
	$(':radio').change(function() {
  console.log('New star rating: ' + this.value);
});
</script>
<% include ../partials/footer %>