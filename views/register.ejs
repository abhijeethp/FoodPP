<% include ./partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Sign up</h1>
		<div style="width:30%; margin:25px auto">
			<form action="/register" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="user[email]" placeholder="Email">
				</div>
				<div class="form-group row">
					<div class="col-xs-6">
						<input class="form-control" type="text" name="user[fname]" placeholder="First name">
					</div>
					<div class="col-xs-6">
						<input class="form-control" type="text" name="user[lname]" placeholder="Last name">
					</div>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="user[mobile]" placeholder="Mobile">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="user[password]" placeholder="Password">
				</div>
				<div class="form-group">
					<textarea class="form-control" name = "user[address]" rows="3" placeholder="Address"></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Sign up</button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ./partials/footer %>



