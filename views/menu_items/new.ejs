<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a new item into <%=menu.Menu_name%> of <%=restaurant.Name%></h1>
		<div style="width:30%; margin:25px auto">
			<form action="/restaurants/<%=restaurant.Restaurant_id%>/menus/<%=menu.Menu_id%>/menu_items" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="menuItem[Name]" placeholder="Item name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="menuItem[Image]" placeholder="Image URL">
				</div>

				<div class="form-group">
				<select name="menuItem[Veg]" class="form-control">
					<option value="1">Veg</option>
					<option value="0">Non-Veg</option>
				</select>
				</div>
				
				<div class="form-group">
					<input class="form-control" type="number" name="menuItem[Price]" placeholder="Price">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="menuItem[Serves]" placeholder="Serves">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
<% include ../partials/footer %>