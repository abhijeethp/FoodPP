<% include ../partials/header %>

<div class="ui container">
	<div class="row">
		
    <h1 style="text-align: center">Create A New Restaurant</h1>
		
    <div style="width:30%; margin:25px auto">
			<form action="/restaurants" method="POST" accept-charset="utf-8">
				
        <div class="form-group row">
					
          <div class="col-xs-8">
						<input class="form-control" type="text" name="restaurant[Name]" placeholder="Name">
					</div>

					<div class="rating">
  				  
            <label>
      				<input type="radio" name="restaurant[Rating]" value="1" checked/>
      				<span class="icon">â˜…</span>
    				</label>
            
            <% for(var i=2; i<=5; i++) { %>
        			<label>
        				<input type="radio" name="restaurant[Rating]" value="<%=i%>" />
                <% for(var j=0;j<i;j++) { %>
        				  <span class="icon">â˜…</span>
                <% } %>
      				</label>
            <% } %>
			  	
          </div>

				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[Logo]" placeholder="Image URL">
				</div>
				
        <div class="form-group">
					<textarea class="form-control" name = "restaurant[Description]" rows="3" placeholder="Description"></textarea>
				</div>
				
        <div class="form-group row">
					
          <div class="col-xs-6">
						<input class="form-control" type="text" name="restaurant[City]" placeholder="City">
					</div>
					
          <div class="col-xs-6">
						<input class="form-control" type="text" name="restaurant[Area]" placeholder="Area">
					</div>
				
        </div>
				
        <div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Create!</button>
				</div>

			</form>
    </div>
	
  </div>
</div>

<% include ../partials/footer %>